@model ProductManagementSystem.Models.ProductModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Update">
                        <h4 class="card-title text-center mt-3">Edit Product</h4>
                        <input type="hidden" asp-for="ProdId" />
                        <hr />
                        <partial name="_ProductFormFields" model="Model" />
                        <div class="text-center">
                            <input type="submit" value="Update" class="btn btn-dark">
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center mt-3">
                    <a asp-action="Index" class="text-decoration-none text-dark">
                        <i class="bi bi-arrow-left-circle-fill"></i> Go back to list
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
