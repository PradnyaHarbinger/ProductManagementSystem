@using Microsoft.AspNetCore.Identity;

@inject SignInManager<IdentityUser> SignInManager;
@inject UserManager<IdentityUser> UserManager;

@{
    var isLoginPage = ViewContext.RouteData.Values["Action"].ToString() == "Login";
    var isRegisterPage = ViewContext.RouteData.Values["Action"].ToString() == "Register";
}

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" href="#"><i class="bi bi-person-circle"></i> Hello, @UserManager.GetUserName(User)</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" method="post" class="form-inline" asp-controller="Account" asp-action="LogOff">
                <button type="submit" class="btn text-dark">Logout</button>
            </form>
        </li>
    }
    else if (isLoginPage)
    {
        <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
        </li>
    }
    else if (isRegisterPage)
    {
        <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    }
</ul>
