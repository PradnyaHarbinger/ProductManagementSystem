@model UserModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form method="post" asp-action="Update">
                        <h4 class="card-title text-center mt-3">Edit User</h4>
                        <input asp-for="@Model.Id" hidden />
                        <hr />
                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label">First Name</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label">Last Name</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" readonly class="form-control" />
                            <input asp-for="Email" hidden />
                        </div>

                        <div class="mb-3">
                            <label asp-for="RoleId" class="form-label">Role</label>
                            <select asp-for="RoleId" asp-items="Model.RoleList" class="form-control">
                                <option disabled selected>--select role--</option>
                            </select>
                            <span asp-validation-for="RoleId"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-dark">
                                <i class="bi bi-person-check"></i> Update
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center mt-3">
                    <a asp-action="GetUser" class="text-decoration-none text-dark">
                        <i class="bi bi-arrow-left-circle-fill"></i> Back to User
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
