@model IEnumerable<UserModel>
<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-black">User List</h2>
    </div>
</div>

<div>
    <a class="btn btn-dark" asp-area="" asp-controller="Admin" asp-action="AddUser">
        <i class="bi bi-plus-circle"></i>
        Add User
    </a>
</div>

<div class="p-4">
    @if (Model.Count() > 0)
    {
        <table class="table table-striped text-center">
            <thead class="thead-light">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    @if (user.Email != "superadmin@gmail.com")
                    {
                        <tr>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.Role</td>
                            <td>
                                <div class="d-flex justify-content-center">
                                    <a asp-action="Update" asp-route-userId="@user.Id" class="btn btn-primary mx-2">
                                        Edit
                                    </a>
                                    <form asp-action="Delete" asp-route-userId="@user.Id"
                                          onsubmit="return confirm('Are you sure you want to delete user?');">
                                        <button type="submit" class="btn btn-danger mx-2">Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
</div>

