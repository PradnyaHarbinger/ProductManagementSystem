@model ProductManagementSystem.Models.DTO.AddUserModel

<style>

    .form-control {
        border: 1px solid black;
        color: black;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form asp-action="AddUser" method="post" role="form">
                        <h4 class="text-center">Add New User</h4>
                        <hr />
                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label">First Name</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label">Last Name</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RoleSelected" class="form-label">Role</label>
                            <select asp-for="RoleSelected" asp-items="@Model.RoleList" class="form-control">
                                <option disabled selected>--Choose role--</option>
                            </select>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-dark">
                                <i class="bi bi-person-plus"></i> Add User
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="GetUser" class="text-decoration-none text-center text-dark">
                        <i class="bi bi-arrow-left-circle-fill"></i> Go back to list
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
